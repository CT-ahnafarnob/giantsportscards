<style>
    .{{section.id}} {
        background-color: #f8f8f8;
           padding: 40px;
    }

     .{{section.id}} ul,a {
        text-decoration: none;
        list-style: none;
        color: black;
        
    }
    .{{section.id}} h3 {
        font-style: normal;
    }
    .{{section.id}} p {
        font-family: var(--regular-arialMT-font) ! important;
        font-size: 13px;
        color: black;
    }
  
    .{{section.id}} 
    .giantsports-footer {
        overflow: hidden;
        display: flex;
        flex-wrap: wrap;
        align-items: flex-start;
        gap: 80px;
    }
   .giantsports-footer > div {
        flex: 1;
    }
    .payment-icons-list{
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 20px;
        padding: 0;
        list-style: none;
        flex-wrap: wrap;
    }
    /* Award */
    .footer-award__wrapper {
        max-width: fit-content;
        margin: auto;
        background-color: #014F42;
        margin-bottom: 20px;
    }

    .footer-award__image {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 20px;
        padding: 20px;
        flex-wrap: wrap;
    }

    /* Copyright and Powered By */
    .{{section.id}} .copyright_text p{
        text-align: center;
        margin-top: 10px;
        font-size: 10px;
    }
   
    @media (max-width: 610px) {
    .{{section.id}} 
    .giantsports-footer {
        overflow: hidden;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 20px;
    }
   
    } 
   
</style>
<section class="{{section.id}} custom-page-width">
    <footer class="giantsports-footer">
        
        <div class="footer-logo" style="display:contents;">
              {% if section.settings.footer_logo != blank %}
               <img src="{{ section.settings.footer_logo | image_url }}" alt="" width="auto" height="auto">
                {% else %}
                <img src="https://cdn.shopify.com/s/files/1/0607/5393/6592/files/logo.svg?v=1759271509&amp;width=500" alt="" width="120" height="auto" loading="lazy">   
            {% endif %} 
        </div>
        
            {% if section.settings.footer_menu %}
            <nav class="footer-menu">
                <ul>
                {% for link in linklists[section.settings.footer_menu].links %}
                    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
                </ul>
            </nav>
            {% endif %}
            {% if section.settings.footer_menu2 %}
            <nav class="footer-menu-2">
                <ul>
                {% for link in linklists[section.settings.footer_menu2].links %}
                    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
                </ul>
            </nav>
            {% endif %}
       
     
        
        <div class="footer-text">
            <h3>{{ section.settings.footer_text }}</h3>
            <div class="description-1">
            <p>{{ section.settings.description_1 }}</p>
            </div>
        </div>
       
        
        <div class="footer-contact text">
        <h3>{{ section.settings.contact_header }}</h3>
        <div class="contact-info">
            <p>{{ section.settings.description_2 }}</p> 
        </div>
        </div>

    </footer>

       {% comment %} Award {% endcomment %}
    <div class="footer-award__wrapper">
        <div class="footer-award__inner">
            <div class="footer-award__image">
                {% for block in section.blocks %} 
                    {% if block.settings.award_image != blank %}
                        <img 
                        src="{{ block.settings.award_image | image_url: width: 250 }}" 
                        alt="{{ block.settings.award_image.alt | default: 'Award image' }}" 
                        width="100" 
                        height="{{block.settings.image_height_size}}" 
                        loading="lazy" {{block.shopify_attributes}}>
                    {% else %}
                        <img 
                        src="https://cdn.shopify.com/s/files/1/0607/5393/6592/files/Upper_Deck_Badge_1_1.avif?v=1761021671" 
                        alt="Default logo" 
                        width="100" 
                        height="100" 
                        loading="lazy"
                        {{block.shopify_attributes}}>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>


    {% comment %} payment {% endcomment %}
    <ul class="payment-icons-list">
      {%- for type in shop.enabled_payment_types -%}
        <li>{{ type | payment_type_svg_tag: class: 'icon' }}</li>
      {%- endfor -%}
    </ul>
      {% comment %} Copyright and Powered By {% endcomment %}
       <div class="copyright_text">
            <p>
                &copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: '/' }} | We accept American Express, Visa, Mastercard, Discover, and More.
            </p>

            <p>{{ powered_by_link }}</p>
        </div>
        
</section>

{% schema %}
{
    "name": "Custom Footer",
    "enabled_on": {
        "groups": ["footer"]
    },
    "settings": [
        {
            "type": "image_picker",
            "id": "footer_logo",
            "label": "Footer Logo"
        },
        {
            "type": "link_list",
            "id": "footer_menu",
            "label": "Footer Menu"
        },
        {
            "type": "link_list",
            "id": "footer_menu2",
            "label": "Footer Menu 2"
        },
        {
            "type": "text",
            "id": "footer_text",
            "label": "Footer Text",
        },
        {
            "type": "richtext",
            "id": "description_1",
            "label": "Write your description"
        },
        {
            "type": "text",
            "id": "contact_header",
            "label": "Contact Header",
            "default": "Contact US"
        },
        {
            "type": "richtext",
            "id": "description_2",
            "label": "Write your Contact Info"
        }

    ],
    "blocks": [
        {
            "type": "award_image",
            "name": "Award Image",
            "settings": [
                {
                    "type": "header",
                    "content": "Award image section"
                },
                {
                    "type": "image_picker",
                    "id": "award_image",
                    "label": "Change Award Image"
                },
                {
                    "type": "range",
                    "id": "image_width_size",
                    "min": 30,
                    "max": 130,
                    "step": 1,
                    "unit": "px",
                    "label": "image width",
                    "default": 100
                },
                {
                    "type": "range",
                    "id": "image_height_size",
                    "min": 30,
                    "max": 130,
                    "step": 1,
                    "unit": "px",
                    "label": "image height",
                    "default": 100
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Custom Footer",
            "category": "Custom Section"
        }
    ]
}
{% endschema %}