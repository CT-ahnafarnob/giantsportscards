            },
            {
                "type": "text",
                "id": "banner_2_upper",
                "label": "Banner 2 - Upper Text", 
                "default": "NEW"
            },
            {
                "type": "text",
                "id": "banner_2_lower",
                "label": "Banner 2 - Lower Text",
                "default": "RELEASES"
            },
            {
                "type": "text",
                "id": "banner_3_upper",
                "label": "Banner 3 - Upper Text",
                "default": "FREE SHIPPING"
            },
            {
                "type": "text",
                "id": "banner_3_lower",
                "label": "Banner 3 - Lower Text", 
                "default": "ORDERS $100+"
            }

        ],
        "presets": [
            {
                "name": "Custom Multi-Column Image Text",
                "category": "Custom Section"
            }
              
        ]
    }
{% endschema %}